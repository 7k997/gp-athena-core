<rml>
    <head>
        <title>Demo</title>
        <style>
            body {
                font-family: arial;
                font-weight: bold;
                font-style: normal;
                font-size: 16px;
                width: 100%;
                height: 100%;
            }

            .menu {
                position: relative;
                display: flex;
                flex-direction: column;
                min-height: 100px;
                max-height: 570px;
                min-width: 350px;
                max-width: 350px;
                background: #000000a0;
                color: white;
                left: 25px;
                top: 25px;
            }

            .header {
                display: block;
                background: #03adfcff;
                min-height: 50px;
                max-height: 50px;
            }

            .headertext {
                display: block;
                position: relative;
                top: 17px;
                text-align: center;
            }

            .option {
                display: flex;
                min-width: 350px;
                max-width: 350px;
            }

            .selected {
                background: #ffffffe9;
                color: black;
            }

            .option .key {
                text-align: left;
                font-size: 12px;
                min-width: 163px;
                max-width: 163px;
            }

            .option .value {
                text-align: right;
                font-size: 12px;
                min-width: 163px;
                max-width: 163px;
            }

            .option div {
                display: block;
                padding: 12px;
                box-sizing: border-box;
            }

            .options {
                overflow-y: scroll;
                max-height: 445px;
            }

            .description {
                position: relative;
                min-height: 50px;
                max-height: 50px;
                font-size: 12px;
                padding: 12px;
                box-sizing: border-box;
                top: 19px;
                background: #0000003e;
                border-top: 2px #0000006d;
            }
        </style>
    </head>
    <body>
        <div class="menu">
            <div class="header" id="header">
                <div class="headertext" id="headertext"></div>
            </div>
            <div class="options" id="options"></div>
            <div class="description" id="description"></div>
        </div>
    </body>
</rml>
